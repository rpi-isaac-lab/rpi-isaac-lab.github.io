---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <div class="project-link">
    <a class="card-text" href="/students/#{{ page.researcher | remove: '"' }}">
      Lead Researcher: {{ page.researcher }}
    </a>
    </div>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

</div>
